@model IEnumerable<Data.Models.ChiTietSP>
@{
    string MaSP = ViewData["MaSP"] as string;
}

<p>
    <a asp-action="Create" asp-controller="ProductDetails" asp-route-id="@MaSP">Thêm chi tiết</a>
</p>
<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sold)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <img height="50" src="/api/file/@item.ImageName" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Unit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sold)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td style="max-width: 175px; min-width: 120px;">
                    <a asp-controller="ProductDetails" class="my-1 btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Chỉnh sửa</a>
                    <a asp-controller="ProductDetails" class="my-1 btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id">Chi tiết</a>
                    <a asp-controller="ProductDetails" class="my-1 btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@model IEnumerable<Data.Models.SanPham>

@{
    ViewData["Title"] = "Index";
    int totalRecord = (int)ViewData["TotalRecord"];
    int page;
    if (!int.TryParse(Context.Request.Query.FirstOrDefault(key => key.Key == "page").Value, out page)) page = 1;
}

<h1>Danh sách sản phẩm</h1>

<p>
    <a asp-action="Create">Tạo sản phẩm mới</a>
</p>

<nav aria-label="...">
  <ul class="pagination pagination-sm">
    @for (int i = 0 ; i < totalRecord; i += 10)
    {
        <li class="page-item @(page == i/10+1 ? "active" :"")">
          <a class="page-link" asp-route-page="@(i/10+1)" tabindex="-@(i/10+1)">@(i/10+1)</a>
        </li>
    }
  </ul>
</nav>
<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShowAtHome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OptionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MainImageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OptionCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sold)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShowAtHome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OptionName)
            </td>
            <td>
                <img height="100" src="/api/file/@item.MainImageName" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td class="text-nowrap">
                @string.Format("{0:n0}đ",item.MinPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OptionCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sold)
            </td>
            <td class="d-flex">
                <a title="Chỉnh sửa" class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="far fa-edit"></i></a>
                <a title="Chi tiết" class="mx-1 btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info"></i></a>
                <a title="Xóa" class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="far fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
